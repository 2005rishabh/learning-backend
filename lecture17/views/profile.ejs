<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Profile</title>
  </head>
  <body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-9">
      <div class="w-full justify-end flex">
        <a class="px-3 py-2 bg-red-600 rounded-md" href="/logout">Logout</a>
      </div>

      <h3 class="text-3xl mb-5 text-center">Hello, <%= user.name %></h3>

      <h5 class="mb-5">You can create a post here</h5>
      <form action="/post" method="post">
        <textarea
          placeholder="What's on your mind?"
          class="p-2 block mb-4 outline-none w-1/3 resize-none bg-transparent border-2 border-zinc-800 rounded-md"
          name="content"
        ></textarea>
        <input
          class="px-3 py-2 bg-blue-600 block rounded-md cursor-pointer"
          type="submit"
          value="Create New Post"
        />
      </form>

      <div class="posts mt-20">
        <h3 class="text-2xl mb-5 text-zinc-300">Here you can see your posts</h3>

        <div class="postcontainer mb-10">
          <% user.posts.slice().reverse().forEach(function(p) { %>
          <div
            class="post w-1/3 mb-4 border-2 p-4 bg-zinc-600 border-zinc-800 rounded-md"
          >
            <h4 class="mb-2 text-blue-400"><%= user.name %></h4>
            <p><%= p.content %></p>
            <small class="mt-2 inline-block"><%= p.likes.length %> Likes</small>

            <div class="btns flex gap-4 mt-2">
              <a class="text-red-400" href="/like/<%= p._id %>">Like</a>
              <a class="text-yellow-300" href="/edit/<%= p._id %>">Edit</a>
              <a class="text-red-600" href="/delete/<%= p._id %>">Delete</a>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </body>
</html>
