<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.tailwindcss.com"></script>
  <title>All Users</title>
</head>
<body class="bg-zinc-900 text-white p-10">
  <div class="nav mb-6">
    <a href="/" class="text-blue-400">Create User</a>
  </div>
  <h1 class="text-3xl tracking-tighter mb-4">All Users</h1>
  <div class="users flex gap-6 flex-wrap">
    <% users.forEach(user => { %>
      <div class="user w-72 p-5 bg-zinc-800 rounded-lg">
        <div class="w-full h-48 rounded-lg bg-zinc-700 overflow-hidden flex items-center justify-center">
          <% if (user.image) { %>
            <img src="<%= user.image %>" alt="user image" class="w-full h-full object-cover">
          <% } else { %>
            <span class="text-zinc-400">No Image</span>
          <% } %>
        </div>
        <h3 class="text-xl mt-3"><%= user.name %></h3>
        <h5 class="text-zinc-400"><%= user.email %></h5>
        <div class="flex gap-3 mt-4">
          <a class="px-3 py-1 bg-red-500 rounded" href="/edit/<%= user._id %>">Edit</a>
          <a class="px-3 py-1 bg-blue-500 rounded" href="/delete/<%= user._id %>">Delete</a>
        </div>
      </div>
    <% }) %>
  </div>
</body>
</html>
