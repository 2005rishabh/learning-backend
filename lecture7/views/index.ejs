<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

    <title>Document</title>
  </head>

  <body>
    <div class="main text-white w-full min-h-screen bg-zinc-900">
      <div class="form flex flex-col gap-4 p-4">
        <form action="/create" method="post" class="flex flex-col gap-4">
          <input
            class="block bg-zinc-800"
            type="text"
            placeholder="Title idhar aiynga..."
            name="title"
          />
          <textarea class="block bg-zinc-800" name="body" id="">content idhar ayinga....</textarea>
          <input
            class="bg-blue-400 rounded w-72"
            type="submit"
            value="Create Task"
          />
        </form>
      </div>
      <div class="tasks flex gap-3 p-10">
        <% if(files.length> 0) { %> <%files.forEach(function(val) { %>
        <div class="task w-72 px-3 py-4 bg-zinc-800 rounded-md">
          <h1 class="text-3xl tracking-tighter"><%= val %></h1>
          <div class="flex w-full justify-between">
            <a href="/file/<%= val%>" class="text-blue-500 inline-block mt-3">
              Read More
            </a>
            <a href="/edit/<%= val%>" class="text-blue-500 inline-block mt-3">
              Edit
            </a>
          </div>
        </div>
        <% }) %> <% } else { %>
        <h3 class="bg-zinc-700">No tasks yet here</h3>
        <% } %>
      </div>
    </div>
  </body>
</html>
